{% extends "govuk/template.njk" %}
{% from "govuk/components/header/macro.njk" import govukHeader %}

{% set bodyAttributes = {
  "data-session-timeout": sessionTimeout.sessionTimeoutMinutes,
  "data-session-warning": sessionTimeout.sessionWarningMinutes,
  "data-session-check-interval": sessionTimeout.checkIntervalSeconds
} %}

{% block head %}
  {% include "webpack/css.njk" %}
{% endblock %}

{% block bodyStart %}
  {# Start inert container wrapper for all page content #}
  <div class="govuk-modal-dialogue-inert-container">
{% endblock %}

{% block header %}
{{ govukHeader({
  serviceName: serviceName or "Possession claims",
  navigation: [
    {
      text: 'logout',
      href: '/logout'
    }
  ]
}) }}
{% endblock %}

{% block beforeContent %}
{% endblock %}

{% block beforeContent %}
  {% block modal %}
    {% include "components/timeout-modal.njk" %}
  {% endblock %}
{% endblock %}

{% block bodyEnd %}
  {# Close inert container wrapper #}
  </div>

  {# Timeout modal - outside inert container #}
  {% block modal %}
    {% include "components/timeout-modal.njk" %}
  {% endblock %}
  
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  {% include "webpack/js.njk" %}
{% endblock %}
