{% extends "journeyTemplate.njk" %}

{% block page_title %}{{ t('title') }}{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">
          {{ t('title') }}
        </h1>
        <div class="govuk-panel__body">
          {{ t('body') }}<br>
          <strong>{{ data.step2.email }}</strong>
        </div>
      </div>

      <h2 class="govuk-heading-m">{{ t('whatHappensNext.title') }}</h2>
      <p class="govuk-body">{{ t('whatHappensNext.body') }}</p>

      <p class="govuk-body">
        <a href="/dashboard" class="govuk-link">
          {{ t('returnToDashboard') }}
        </a>
      </p>
    </div>
  </div>
{% endblock %}