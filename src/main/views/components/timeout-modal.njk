{% from "govuk/components/button/macro.njk" import govukButton %}

<div id="timeout-alert" role="status" aria-live="assertive" aria-atomic="true" class="govuk-visually-hidden"></div>

<div id="timeout-modal-container" class="modal" hidden>
  <div id="timeout-modal" class="modal-content govuk-width-container" tabindex="-1" role="dialog" aria-modal="true" aria-labelledby="timeout-modal-heading" aria-describedby="timeout-modal-description timeout-modal-saved">
    <h2 id="timeout-modal-heading" class="govuk-heading-m">{{ t('timeout.title') }}</h2>
    <p id="timeout-modal-description" class="govuk-body">
      {{ t('timeout.part1') }} <strong id="countdown-time"></strong>.
    </p>
    <p class="govuk-body govuk-visually-hidden" aria-live="polite" aria-atomic="true">
      <span id="countdown-message"></span>
    </p>
    <p id="timeout-modal-saved" class="govuk-body">
      {{ t('timeout.part2') }}
    </p>
    <div class="govuk-form-group">
      <div class="timeout-modal-actions">
        {{ govukButton({
          text: t('timeout.buttonText'),
          attributes: { id: 'timeout-modal-close-button' }
        }) }}
        <a href="/logout" class="govuk-link timeout-modal-signout-link">{{ t('timeout.signOutLinkText') }}</a>
      </div>
    </div>
  </div>
</div>
