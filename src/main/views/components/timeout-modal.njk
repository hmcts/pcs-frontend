{% from "govuk/components/button/macro.njk" import govukButton %}

<div id="timeout-modal-container" class="modal" hidden>
  <div id="timeout-modal" class="modal-content govuk-width-container" tabindex="0" role="dialog" aria-labelledby="timeout-modal-heading">
    <h2 id="timeout-modal-heading" class="govuk-heading-m">{{ t('timeout.title') }}</h2>
    <p class="govuk-body">
      {{ t('timeout.part1') }}&nbsp;<span id="countdown-timer"></span>&period;
    </p>
    <p class="govuk-body">
    {{ t('timeout.part2') }}
    </p>
    <div class="govuk-form-group">
      <div class="timeout-modal-actions">
        {{ govukButton({
          text: t('timeout.buttonText'),
          attributes: { id: 'timeout-modal-close-button' }
        }) }}
        <a href="/logout" class="govuk-link timeout-modal-signout-link">{{ t('timeout.signOutLinkText') }}</a>
      </div>
    </div>
  </div>
</div>
