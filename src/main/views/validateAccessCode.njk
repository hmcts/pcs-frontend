{% extends "template.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-notification-banner" role="region" aria-labelledby="experimental-banner">
        <div class="govuk-notification-banner__content">
          <p class="govuk-notification-banner__heading" id="experimental-banner">
            This is a development placeholder page for testing purposes only.
          </p>
        </div>
      </div>

      <h1 class="govuk-heading-xl">Validate Access Code</h1>

      {% if error %}
        <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-module="govuk-error-summary">
          <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
          </h2>
          <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
              <li>
                <a href="#accessCode">{{ error }}</a>
              </li>
            </ul>
          </div>
        </div>
      {% endif %}

      <form method="POST" action="/validate-access-code/{{ caseId }}" novalidate>
        <div class="govuk-form-group {% if error %}govuk-form-group--error{% endif %}">
          <label class="govuk-label govuk-label--m" for="accessCode">
            Enter your access code
          </label>
          <div class="govuk-hint">
            This is the access code you received for case {{ caseId }}
          </div>
          {% if error %}
            <p id="accessCode-error" class="govuk-error-message">
              <span class="govuk-visually-hidden">Error:</span> {{ error }}
            </p>
          {% endif %}
          <input
            class="govuk-input govuk-input--width-20 {% if error %}govuk-input--error{% endif %}"
            id="accessCode"
            name="accessCode"
            type="text"
            autocomplete="off"
            {% if error %}aria-describedby="accessCode-error"{% endif %}
          >
        </div>

        <button type="submit" class="govuk-button" data-module="govuk-button">
          Continue
        </button>
      </form>
    </div>
  </div>
{% endblock %}
