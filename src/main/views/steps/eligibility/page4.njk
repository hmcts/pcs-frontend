{% extends "stepsTemplate.njk" %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">{{ page4.title }}</h1>

    {% if error %}
      <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">{{ errorSummaryTitle }}</h2>
        <div class="govuk-error-summary__body">
          <ul class="govuk-list govuk-error-summary__list">
            <li><a href="#{{ error.field }}">{{ error.text }}</a></li>
          </ul>
        </div>
      </div>
    {% endif %}

    <form method="post" novalidate>
      {{ govukSelect({
        id: "title",
        name: "title",
        label: {
          text: page4.fields.title.label
        },
        items: [
          { value: "", text: "Select", selected: not title },
          { value: "Mr", text: page4.fields.title.items.mr, selected: title === "Mr" },
          { value: "Ms", text: page4.fields.title.items.ms, selected: title === "Ms" },
          { value: "Miss", text: page4.fields.title.items.miss, selected: title === "Miss" },
          { value: "Mrs", text: page4.fields.title.items.mrs, selected: title === "Mrs" }
        ],
        errorMessage: error?.field === "title" and { text: error.text }
      }) }}

      {{ govukInput({
        id: "firstName",
        name: "firstName",
        label: {
          text: page4.fields.firstName.label
        },
        value: firstName,
        errorMessage: error?.field === "firstName" and { text: error.text }
      }) }}

      {{ govukInput({
        id: "lastName",
        name: "lastName",
        label: {
          text: page4.fields.lastName.label
        },
        value: lastName,
        errorMessage: error?.field === "lastName" and { text: error.text }
      }) }}

      {{ govukButton({ text: buttons.continue }) }}
    </form>
  </div>
</div>
{% endblock %}

