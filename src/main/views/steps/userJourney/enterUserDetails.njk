{% extends "stepsTemplate.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-l">{{ title }}</h1>

    {% if errorSummary %}
      {{ govukErrorSummary(errorSummary) }}
    {% endif %}

    <form method="post" action="{{ url }}">
      {{ govukInput({
        id: "applicantForename",
        name: "applicantForename",
        label: { text: firstNameLabel },
        value: applicantForename,
        classes: "govuk-!-width-three-quarters",
        attributes: {
            maxlength: 50
        },
        errorMessage: fieldErrors and fieldErrors.applicantForename and { text: fieldErrors.applicantForename }
      }) }}

      {{ govukInput({
        id: "applicantSurname",
        name: "applicantSurname",
        label: { text: lastNameLabel },
        value: applicantSurname,
        classes: "govuk-!-width-three-quarters",
        attributes: {
            maxlength: 50
        },
        errorMessage: fieldErrors and fieldErrors.applicantSurname and { text: fieldErrors.applicantSurname }
      }) }}

      {{ govukButton({ text: continue, attributes: { type: 'submit' } }) }}
    </form>
  </div>
</div>
{% endblock %}
