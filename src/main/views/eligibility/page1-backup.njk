{% extends "stepsTemplate.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}

  {% if previousStepUrl %}
    {{ govukBackLink({
      text: "Back",
      href: previousStepUrl
    }) }}
  {% endif %}

  <form method="post" action="postcodeLookup">
    <div class="govuk-form-group">
      <label class="govuk-label govuk-label--l" for="postcode">
        {{ step.title }}
      </label>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-third">
          {{ govukInput({
            label: {
              text: step.description
            },
            id: "postcode",
            name: "postcode",
            classes: "govuk-input",
            value: postcodeValue
          }) }}
        </div>
        <div class="govuk-grid-column-one-third govuk-!-padding-top-6">
          {{ govukButton({
            text: "Find address",
            attributes: { name: "action", value: "find", type: "submit" }
          }) }}
        </div>
      </div>
    </div>
  </form>
   <form method="post">
    <div class="govuk-button-group">
      {{ govukButton({
        text: "Continue",
        attributes: { name: "action", value: "continue", type: "submit" }
      }) }}
    </div>
  </form>

{% endblock %}
