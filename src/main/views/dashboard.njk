{% extends "template.njk" %}
{%- from "components/notification/macro.njk" import notification -%}
{%- from "components/taskGroup/macro.njk" import taskGroup -%}

{% block content %}
  <h1 class="govuk-heading-l">Dashboard</h1>

  {% for dashboardNotification in notifications %}
    {{ notification(dashboardNotification.templateId, dashboardNotification.templateValues)
    }}    
  {% endfor %}

  {% for dashboardTaskGroup in taskGroups %}
      {{ taskGroup(dashboardTaskGroup) }}
  {% endfor %}

  <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

  <h2 class="govuk-heading-m">NestJS Proof of Concept</h2>
  <p class="govuk-body">The following journey demonstrates NestJS integration with GOV.UK Design System patterns.</p>
  
  <a href="/nest-journey/step1" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
    Start Nest Journey
    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
      <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
    </svg>
  </a>

{% endblock %}
