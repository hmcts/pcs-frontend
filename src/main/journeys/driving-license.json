{
  "meta": { "name": "Driving Licence Application" },
  "steps": {
    "start": {
      "title": "Do you already have a provisional licence?",
      "fields": {
        "hasProvisional": {
          "type": "radios",
          "options": ["yes", "no"],
          "validate": {
            "required": "Select yes or no"
          }
        }
      },
      "next": {
        "when": "hasProvisional == 'yes'",
        "goto": "summary",
        "else": "personal-details"
      }
    },
    "personal-details": {
      "title": "Your personal details",
      "fields": {
        "firstName": {
          "type": "text",
          "validate": { "required": "Enter your first name" }
        },
        "lastName": {
          "type": "text",
          "validate": { "required": "Enter your last name" }
        }
      },
      "next": "summary"
    },
    "summary": {
      "title": "Check your answers",
      "type": "summary",
      "next": "confirmation"
    },
    "confirmation": {
      "title": "Application complete",
      "type": "confirmation"
    }
  }
}
