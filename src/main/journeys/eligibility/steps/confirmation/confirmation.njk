{% extends "journeyTemplate.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}

  {# Work out the reference number first #}
  {% if allData.confirmation and allData.confirmation.referenceNumber %}
    {% set referenceNumber = allData.confirmation.referenceNumber %}
  {% else %}
    {% set referenceNumber = translations.eligibility.confirmation.panel.pending %}
  {% endif %}

  {{ govukPanel({
    titleText: step.title,
    html:
      translations.eligibility.confirmation.panel.refLabel
      ~ "<br><strong>"
      ~ referenceNumber
      ~ "</strong>"
  }) }}

  <p class="govuk-body">{{ translations.eligibility.confirmation.sentEmail }}</p>

  <h2 class="govuk-heading-m">{{ translations.eligibility.confirmation.whatNextTitle }}</h2>
  <p class="govuk-body">{{ translations.eligibility.confirmation.whatNext1 }}</p>
  <p class="govuk-body">{{ translations.eligibility.confirmation.whatNext2 }}</p>

  <h2 class="govuk-heading-m">{{ translations.eligibility.confirmation.helpTitle }}</h2>
  <p class="govuk-body">
    <a href="{{ translations.eligibility.confirmation.helpLinkHref }}" class="govuk-link">
      {{ translations.eligibility.confirmation.helpLinkText }}
    </a>
  </p>

  <div class="govuk-button-group">
    {{ govukButton({
      text: translations.eligibility.confirmation.exit,
      href: "/?lang=" ~ lang,
      classes: "govuk-button--secondary"
    }) }}
  </div>

{% endblock %}
