{% extends "journeyTemplate.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}

  {# Reference number: real one if present, otherwise i18n fallback #}
  {% if allData.confirmation and allData.confirmation.referenceNumber %}
    {% set referenceNumber = allData.confirmation.referenceNumber %}
  {% else %}
    {% set referenceNumber = t('confirmation.panel.pending', 'PCR-PENDING') %}
  {% endif %}

  {{ govukPanel({
    titleText: step.title or t('confirmation.title', 'Application complete'),
    html:
      t('confirmation.panel.refLabel', 'Your reference number')
      ~ '<br><strong>'
      ~ referenceNumber
      ~ '</strong>'
  }) }}

  <p class="govuk-body">{{ t('confirmation.sentEmail', 'We have sent you a confirmation email.') }}</p>

  <h2 class="govuk-heading-m">{{ t('confirmation.whatNextTitle', 'What happens next') }}</h2>
  <p class="govuk-body">{{ t('confirmation.whatNext1', 'Your possession claim will be reviewed by the court.') }}</p>
  <p class="govuk-body">{{ t('confirmation.whatNext2', 'You will be contacted within 5 working days with next steps.') }}</p>

  <h2 class="govuk-heading-m">{{ t('confirmation.helpTitle', 'Help and support') }}</h2>
  <p class="govuk-body">
    <a href="{{ t('confirmation.helpLinkHref', '#') }}" class="govuk-link">
      {{ t('confirmation.helpLinkText', 'Find legal advice and support') }}
    </a>
  </p>

  <div class="govuk-button-group">
    {{ govukButton({
      text: t('confirmation.exit', 'Exit'),
      href: '/?lang=' ~ lang,
      classes: 'govuk-button--secondary'
    }) }}
  </div>

{% endblock %}
