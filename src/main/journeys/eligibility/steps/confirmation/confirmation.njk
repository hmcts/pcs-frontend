{% extends "journeyTemplate.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}

  {# Reference number: real one if present, otherwise i18n fallback #}
  {% if allData.confirmation and allData.confirmation.referenceNumber %}
    {% set referenceNumber = allData.confirmation.referenceNumber %}
  {% else %}
    {% set referenceNumber = t('confirmation.panel.pending', 'PCR-PENDING') %}
  {% endif %}

  {{ govukPanel({
    titleText: step.title,
    html:
      t('confirmation.panel.refLabel', 'Your reference number')
      ~ '<br><strong>'
      ~ referenceNumber
      ~ '</strong>'
  }) }}

  <p class="govuk-body">{{ t('confirmation.sentEmail') }}</p>

  <h2 class="govuk-heading-m">{{ t('confirmation.whatNextTitle') }}</h2>
  <p class="govuk-body">{{ t('confirmation.whatNext1') }}</p>
  <p class="govuk-body">{{ t('confirmation.whatNext2') }}</p>

  <h2 class="govuk-heading-m">{{ t('confirmation.helpTitle') }}</h2>
  <p class="govuk-body">
    <a href="{{ t('confirmation.helpLinkHref') }}" class="govuk-link">
      {{ t('confirmation.helpLinkText') }}
    </a>
  </p>

  <div class="govuk-button-group">
    {{ govukButton({
      href: '/?lang=' ~ lang,
      text: t('confirmation.exit', 'Exit'),
      classes: 'govuk-button--secondary'
    }) }}
  </div>

{% endblock %}
