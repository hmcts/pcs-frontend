{
  "meta": { "name": "Possession Claim" },
  "steps": {
    "start": {
      "title": "Before you start",
      "next": "page2"
    },
    "page2": {
      "title": "Are you 18 or over?",
      "fields": {
        "age": {
          "type": "radios",
          "options": ["yes", "no"],
          "validate": { "required": "Select yes or no" }
        }
      },
      "next": {
        "when": "age == 'yes'",
        "goto": "page3",
        "else": "ineligible"
      }
    },
    "ineligible": {
      "title": "You are not eligible to make a claim",
      "type": "ineligible"
    },
    "page3": {
      "title": "What are your grounds for possession?",
      "fields": {
        "grounds": {
          "type": "checkboxes",
          "options": ["Rent arrears (ground 8)", "Breach of contract (ground 9)", "Other (ground 10)"],
          "validate": { "required": "Select at least one option" }
        }
      },
      "next": {
        "when": "grounds.length >= 1",
        "goto": "summary"
      }
    },
    "summary": {
      "title": "Check your answers",
      "type": "summary",
      "next": "confirmation"
    },
    "confirmation": {
      "title": "Application complete",
      "type": "confirmation"
    }
  }
}
